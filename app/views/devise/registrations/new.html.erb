<body>
  <div class="container">
    <div class="row">
      <div class="col">
      </div>
      <div class="col-9 logCol">
        <h2><%= t("signup.title") %></h2>
        <%= form_for(resource, as: resource_name, html: {class: "logForm"}, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, class: "logText" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :firstname, class: "logText" %><br />
            <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :lastname, class: "logText" %><br />
            <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :password, class: "logText" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, class: "logText" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>


          <div class="row" id="signupMargin">
            <div class="col-10">
              <%= render "devise/shared/links" %>
            </div>
            <div class="col-1">
              <div class="actions">
                <%= f.submit "Sign up", class: "btn btn-success" %>
              </div>
            </div>
            <div class="col">
            </div>
          </div>

        <% end %>

        </div>
      <div class="col">
      </div>
    </div>
  </div>
<body>
